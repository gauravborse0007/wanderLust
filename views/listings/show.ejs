<% layout("/layouts/boilerplate") %>

  <div class="row mt-3">
    <div class="col-10 offset-3">
      <h3>
        <%=listing.title %>
      </h3>
    </div>
    <br>
    <div class="card col-6 offset-3 edit-card listing-card"> <!-- line no 9 created by own-->
      <img class="image" src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing image" />
      <div class="card-body">
        <p class="card-text">
          <p class= "card-text">Owned By: <%= listing.owner.username%></p>
          <li>
            <%= listing.description %>
          </li>
          <li> &#8377; <%= listing.price %>
          </li>
          <!-- listing.price.toLocaleString("en-IN")  it is giving error so removed -->
          <li>
            <%= listing.location %>
          </li>
          <li>
            <%= listing.country %>
          </li>
        </p>

        <br />

        <% if(currUser && currUser._id.equals(listing.owner._id)) {%>
        <div class="row">
          <div class="mb-3 col-md-8">
            <button class="btn btn-dark edit-btn">
              <a href="/listings/<%= listing._id %>/edit" style="color: white;">Edit</a>
            </button>
          </div>
          <div class="mb-3 col-md-4">
            <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
              <button class="btn btn-dark offset-5">Delete</button>
            </form>
          </div>
        </div>
        <% } %>
      </div>
      <hr>
      <div> <!--class="col-8 offset-3"-->
        <h4>Leave a Review</h4>
        <% if(currUser){ %>
        <form action="/listings/<%= listing.id %>/reviews" method="Post" novalidate class="needs-validation">
          <div class="mt-3 mb-3">
            <label for="rating" class="form-label">Rating</label>
            <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" />
          </div>
          <div class="mt-3 mb-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
            <div class="invalid-feedback">
              Please Enter Some Comments
            </div>
          </div>
          <div class="mt-3 mb-3">
            <br>
            <button class="btn btn-outline-dark">Submit</button>
          </div>
        </form>
        <% } %>
      </div>

      <hr>
      <p><b>All Reviews</b></p>
      <div class="row">
        <% for(review of listing.reviews) {%>
          <div class="card col-5 ml-3 ms-5 mb-3">
            <div class="card-body">
              <h5 class="card-title">Tony: </h5>
              <p class="card-text">
                <%= review.comment %>
              </p>
              <p class="card-text">
                <%= review.rating %> &#9733;
              </p>
              <form class="mb-3" method="post"
                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=Delete">
                <button class="btn btn-sm btn-dark"> Delete</button>
              </form>
            </div>
          </div>
          <% } %>
      </div>
    </div>
  </div>